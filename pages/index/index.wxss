view,text,input,button{
  box-sizing: border-box;
}

page{
  color: #333;
}

.page-container{
  min-height: 100vh;
  padding: 15px;
}

.todo-tips{
  font-size: 12px;
  color: #999;
  margin-bottom: 10px;
}

.todo-input{
  display: block;
  width: 100%;
  height: 40px;
  border: 1px solid #333;
  padding: 0 8px;
  font-size: 16px;
  line-height: 38px;
  margin-bottom: 10px;
}

.todo-item{
  position: relative;
  background: #f5f5f5;
  padding: 10px;
  margin-bottom: 5px;
  overflow: hidden;
}

.todo-item.finished:after{
  position: absolute;
  top: -20px;
  right: -20px;
  width: 80px;
  height: 80px;
  border: 2px solid #999;
  content: '完成';
  line-height: 78px;
  text-align: center;
  font-size: 22px;
  color: #999;
  border-radius: 50%;
  opacity: .4;
  transform: rotate(-45deg);
}

.todo-title{
  font-size: 14px;
  line-height: 20px;
  color: #333;
  margin-bottom: 4px;
}

.todo-created_time{
  font-size: 12px;
  color: #999;
}